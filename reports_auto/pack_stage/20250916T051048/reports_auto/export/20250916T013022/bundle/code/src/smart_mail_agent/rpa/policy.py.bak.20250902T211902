#!/usr/bin/env python3
# 檔案位置: src/smart_mail_agent/rpa/policy.py
# 模組用途: FAQ/政策回應骨架；可接規則或 RAG。
from __future__ import annotations

from typing import Any, Dict


def answer_policy_question(query: str, kb: Dict[str, str] | None = None) -> str:
    """
    參數:
        query: 使用者提問
        kb:   知識庫（鍵為問題/關鍵詞，值為回答文字）
    回傳:
        str: 回覆文字
    """
    kb = kb or {}
    for k, v in kb.items():
        if k and k.lower() in query.lower():
            return v
    return "我們已收到您的問題，將於工作時段內回覆詳細政策說明。"
