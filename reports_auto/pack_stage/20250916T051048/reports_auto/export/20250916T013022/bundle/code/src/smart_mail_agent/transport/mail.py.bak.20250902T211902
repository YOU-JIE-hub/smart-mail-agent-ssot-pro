from __future__ import annotations
from pathlib import Path
from typing import Dict, Any
import os, json
def send_file_transport(out_dir: Path, rec: Dict[str,Any]) -> Path:
    out = out_dir / "rpa_out" / "email_outbox"; out.mkdir(parents=True, exist_ok=True)
    fp = out / f"{rec['payload']['mail_id']}.eml.json"; fp.write_text(json.dumps(rec, ensure_ascii=False, indent=2), encoding="utf-8"); return fp
def send_smtp(rec: Dict[str,Any]) -> None:
    if not os.environ.get("SMTP_HOST"): raise RuntimeError("SMTP_* not configured; use file-transport instead.")
